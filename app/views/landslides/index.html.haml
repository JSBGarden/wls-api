.container
  .row
    .col-md-12.col-xs-12
      .row
        .col-btn.col-xs-12.text-left.bottom30
          %h4 Landslides

        .col-md-12
          = form_tag landslides_path, :method => :get do

            .form-group.pull-right
              = text_field_tag :search, params[:search]
              = submit_tag "Search Near", :name => nil

        .col-sm-12
          .table-responsive
            %table.table.top20.table-striped.table-bordered#amenities
              %thead
                %tr
                  %th Hazard Type
                  %th Injuries
                  %th Landslide Size
                  %th Landslide Type
                  %th Latitude
                  %th Location Accuracy
                  %th Location Description
                  %th Longitude
                  %th Near
                  %th Nearest Places
                  %th Latitude
                  %th Source Name
                  %th Created At
                  %th
                  %th

              %tbody
                - @landslides.each do |landslide|
                  %tr
                    %td= landslide.hazard_type
                    %td= landslide.injuries
                    %td= landslide.landslide_size
                    %td= landslide.landslide_type
                    %td= landslide.latitude
                    %td= landslide.location_accuracy
                    %td= landslide.location_description
                    %td= landslide.longitude
                    %td= landslide.near
                    %td= landslide.nearest_places
                    %td= landslide.latitude
                    %td= landslide.source_name
                    %td= landslide.created_at.strftime("%d/%m/%Y")
                    %td= link_to ("<i class='fa fa-pencil'></i>").html_safe, edit_landslide_path(landslide)
                    %td= link_to ("<i class='fa fa-eye'></i>").html_safe, landslide_path(landslide)

          .col-xs-12.text-left
            = link_to ("<i class='fa fa-user-plus'></i>".html_safe + "Add new Landslide data"), new_landslide_path

            .pagination.pull-right
              = paginate @landslides, outer_window: 3
