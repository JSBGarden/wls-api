.container
  .row
    .col-xs-12.col-md-offset-3.col-md-6
      %h1.text-center
        %span
          = t(:sign_in)
      %hr
      .row
        .col-xs-12

          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            .form-group
              %label Email
              = f.email_field :email, autofocus: true, label: false, :placeholder => :email, :class => "form-control"

            .form-group
              %label Password
              = f.password_field :password, label: false, placeholder: :password, :class => "form-control"

            .form-group
              .pull-left.bottom20
                %label
                  = f.check_box :remember_me
                  &nbsp;
                  = "Remember me"
            .form-group
              = f.submit "Sign In", :class => "btn btn-primary btn-block"
