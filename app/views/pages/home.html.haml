

%div{ :class => "alert alert-success text-center" }
  .row
    - if user_signed_in?
      .col-md-12
        .col-md-7
          .pull-right
            Logged in as
            .strong= current_user.email

        .col-md-5
          .pull-right
            %h5
              = link_to "Edit Profile", edit_user_registration_path
              &nbsp;
              &nbsp;
              = link_to "Logout", destroy_user_session_path, method: :delete
    - else
      .pull-right
        %h4
          = link_to "Sign up", new_user_registration_path
          &nbsp;
          &nbsp;
          = link_to "Login", new_user_session_path
    - flash.each do |name, msg|
      = content_tag :div, msg, id: "flash_#{name}"
.parallax-image
  = image_tag "landslide_1.jpg", size: "1370x450"
%div{ :class => "alert alert-success text-center" }
  .container
    .social-area.text-center
      %h5 Join us on
      %a.btn.btn-social.btn-round{:href => "https://www.facebook.com/pasatrade"}
        %i.fa.fa-facebook
      %a.btn.btn-social.btn-round{:href => "https://www.twitter.com/pasatrade"}
        %i.fa.fa-twitter
      %a.btn.btn-social.btn-round{:href => "https://www.instagram.com/pasa.trade"}
